datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum RoomType {
  JUNIOR
  KING
  PRESIDENTIAL
}

model Room {
  id           Int           @id @default(autoincrement())
  type         RoomType
  beds         Int
  maxOccupancy Int
  oceanView    Boolean       @default(false)
  basePrice    Float
  reservations Reservation[]
}

model Reservation {
  id         Int      @id @default(autoincrement())
  checkIn    DateTime
  checkOut   DateTime
  guests     Int
  roomId     Int
  totalPrice Float
  room       Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
}
