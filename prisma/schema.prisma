datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum RuleType {
  WEEKEND_INCREASE
  RENTAL_DAYS_DISCOUNT_LVL1
  RENTAL_DAYS_DISCOUNT_LVL2
  RENTAL_DAYS_DISCOUNT_LVL3
  AVAILABILITY_INCREASE_LVL1
  AVAILABILITY_INCREASE_LVL2
  AVAILABILITY_INCREASE_LVL3
}

model Rule {
  id          Int      @id @default(autoincrement())
  ruleType    RuleType
  value       Float
  description String?
}

model RoomType {
  id          Int     @id @default(autoincrement())
  name        String
  basePrice   Float
  description String?
  Room        Room[]
}

model Room {
  id           Int           @id @default(autoincrement())
  typeId       Int
  beds         Int
  maxOccupancy Int
  oceanView    Boolean       @default(false)
  reservations Reservation[]
  type         RoomType      @relation(fields: [typeId], references: [id], onDelete: Cascade)
}

model Reservation {
  id         Int      @id @default(autoincrement())
  checkIn    DateTime
  checkOut   DateTime
  guests     Int
  roomId     Int
  totalPrice Float
  room       Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
}
