  "components": {
    "schemas": {
      "CreateRoomDto": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Tipo de habitación (e.g. Junior Suite, King Suite, Presidential Suite)",
            "example": "Junior Suite"
          },
          "beds": {
            "type": "number",
            "description": "Número de camas en la habitación",
            "example": 2
          },
          "maxOccupancy": {
            "type": "number",
            "description": "Ocupación máxima de la habitación",
            "example": 4
          },
          "oceanView": {
            "type": "boolean",
            "description": "Si la habitación tiene vista exterior/oceánica",
            "example": true
          },
          "basePrice": {
            "type": "number",
            "description": "Precio base por noche en dólares",
            "example": 60
          }
        },
        "required": [
          "type",
          "beds",
          "maxOccupancy",
          "oceanView",
          "basePrice"
        ]
      },
      "UpdateRoomDto": {
        "type": "object",
        "properties": {}
      },
      "CreateReservationDto": {
        "type": "object",
        "properties": {
          "checkIn": {
            "format": "date-time",
            "type": "string",
            "description": "Fecha de check-in de la reserva",
            "example": "2024-09-25T00:00:00.000Z"
          },
          "checkOut": {
            "format": "date-time",
            "type": "string",
            "description": "Fecha de check-out de la reserva",
            "example": "2024-09-28T00:00:00.000Z"
          },
          "guests": {
            "type": "number",
            "description": "Cantidad de huéspedes",
            "example": 2
          },
          "roomId": {
            "type": "number",
            "description": "ID de la habitación a reservar",
            "example": 1
          },
          "totalPrice": {
            "type": "number",
            "description": "Precio total de la reserva",
            "example": 180
          }
        },
        "required": [
          "checkIn",
          "checkOut",
          "guests",
          "roomId",
          "totalPrice"
        ]
      },
      "UpdateReservationDto": {
        "type": "object",
        "properties": {}
      }
    }
