            "description": "Number of guests",
            "schema": {
              "example": 2,
              "type": "number"
            }
          },
          {
            "name": "roomType",
            "required": false,
            "in": "query",
            "description": "Type of room",
            "schema": {
              "example": "standard",
              "type": "string"
            }
          }
        ],
        "responses": {
